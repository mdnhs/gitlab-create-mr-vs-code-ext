{
  "name": "gitlab--create-mr",
  "displayName": "GitLab: Create MR",
  "description": "Custom Merge Request for GitHub",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.createMergeRequest",
        "title": "Create Merge Request for GitLab"
      }
    ],
    "configuration": {
      "properties": {
        "mergeRequest.projectId": {
          "type": "string",
          "default": "",
          "description": "Your GitLab Project ID"
        },
        "mergeRequest.accessToken": {
          "type": "string",
          "default": "",
          "description": "Your GitLab Access Token"
        },
        "mergeRequest.sourceBranchName": {
          "type": "string",
          "default": "",
          "description": "Source branch for merge request"
        },
        "mergeRequest.targetBranchName": {
          "type": "string",
          "default": "",
          "description": "Target branch for merge request"
        },
        "mergeRequest.gitlabDomain": {
          "type": "string",
          "default": "",
          "description": "Your GitLab domain (e.g., https://gitlab.com or a self-hosted GitLab domain)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.7.7"
  }
}
